<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_weight="2.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_name_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oregano"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="22sp"
                tools:text="item name" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/oregano"
                android:text="Rs."
                android:textColor="#000000" />

            <TextView
                android:id="@+id/item_price_cart"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oregano"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:text="20" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/oregano"
                android:text="/item"
                android:textColor="#BDBDBD" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oregano"
                android:text="Quantity: "
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/item_quantity_cart"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/oregano"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:text="1" />

            <Button
                android:id="@+id/decrement_qty_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle_shape"
                android:fontFamily="@font/oregano"
                android:text="-"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/increment_qty_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_shape"
                android:fontFamily="@font/oregano"
                android:text="+"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/remove_item"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="REMOVE"
            android:textColor="#000000"
            android:textSize="15sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_img_cart"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="0.9"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher" />

</LinearLayout>